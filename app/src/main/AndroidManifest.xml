<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deadnote">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Deadnote">
        <activity android:name="com.Dividev.deadnote.Register"
            android:theme="@style/Theme.Deadnote.NoActionBar"></activity>
        <activity android:name="com.Dividev.deadnote.Login"
            android:theme="@style/Theme.Deadnote.NoActionBar"/>
        <activity android:name="com.Dividev.deadnote.MainActivity"
            android:theme="@style/Theme.Deadnote.NoActionBar"/>
        <activity
            android:name="com.Dividev.deadnote.Splashscreen"
            android:label="@string/app_name"
            android:theme="@style/Theme.Deadnote.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>